---
import "../styles/global.scss";
import FrontPageHeader from "../components/FrontPageHeader.astro";
import { Image } from "astro:assets";
import Image1 from "../images/Shaving-Neck.jpg";
import Image2 from "../images/Wallabies-Signed-Jersey.jpg";
// import Image3 from "../images/Vintage-Tools.jpg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Document</title>
  </head>
  <body>
    <div class="wrapper">
      <FrontPageHeader />
      <h1>Test Page</h1>
      <h2>This is a test page</h2>
    </div>

    <div class="splide" aria-label="Splide Basic HTML Example">
      <!-- <div class="splide" role="group" aria-label="Splide Basic HTML Example"> -->
      <div class="splide__track">
        <ul class="splide__list">
          <li class="splide__slide">
            <div class="splide__slide__container">
              <Image src={Image1} alt="" />
            </div>
          </li>
          <li class="splide__slide">
            <div class="splide__slide__container">
              <Image src={Image2} alt="" />
            </div>
          </li>
          <li class="splide__slide">
            <div class="splide__slide__container">
              <Image src={Image3} alt="" />
            </div>
          </li>
        </ul>
      </div>
    </div>

    <script>
      import "@splidejs/splide/css";
      import Splide from "@splidejs/splide";

      new Splide(".splide", {
        type: "loop",
        speed: 800,
        autoplay: true,
        interval: 5000,
        // pauseOnHover: true,
        width: "100vw",
        height: "500px",
        cover: true,
        gap: "20vw",
        focus: "center",
      }).mount();
    </script>

    <style>
      .splide {
        /* z-index: -1; */
        position: absolute;
        top: 0;
        left: 0;

        /* height: 100%; */
        /* object-fit: cover; */
      }
      .splide__slide::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0));
      }
      .wrapper {
        display: flex;
        flex-flow: column;
        text-align: center;
        & h1,
        & h2 {
          color: aquamarine;
        }
      }
    </style>
  </body>
</html>
