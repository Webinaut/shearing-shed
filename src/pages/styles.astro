---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Image1 from "../images/hair-styles/IMG_1152.jpg";
import Image2 from "../images/hair-styles/IMG_1491.jpg";
import Image3 from "../images/hair-styles/IMG_2352.jpg";
import Image4 from "../images/hair-styles/IMG_2354.jpg";
import Image5 from "../images/hair-styles/IMG_2412.jpg";
import Image6 from "../images/hair-styles/IMG_2534.jpg";
import Image7 from "../images/hair-styles/IMG_2952.jpg";
import Image8 from "../images/hair-styles/IMG_3058.jpg";
import Image9 from "../images/hair-styles/IMG_3086.jpg";
import Image10 from "../images/hair-styles/IMG_3088.jpg";
const pageTitle = "Styles";
---

<Layout pageTitle={pageTitle}>
  <article>
    <p>
      Here is a selection of styles for you to choose from (or ask us for more):
    </p>
    <div class="grid">
      <div>
        <Image src={Image1} alt="1" />
      </div>
      <div>
        <Image src={Image2} alt="2" />
      </div>
      <div>
        <Image src={Image3} alt="3" />
      </div>
      <div>
        <Image src={Image4} alt="4" />
      </div>
      <div>
        <Image src={Image5} alt="5" />
      </div>
      <div>
        <Image src={Image6} alt="6" />
      </div>
      <div>
        <Image src={Image7} alt="7" />
      </div>
      <div>
        <Image src={Image8} alt="8" />
      </div>
      <div>
        <Image src={Image9} alt="9" />
      </div>
      <div>
        <Image src={Image10} alt="10" />
      </div>
    </div>
  </article>
</Layout>
<style>
  .grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 8px;
    & img {
      aspect-ratio: 1;
      object-fit: cover;
    }
  }
  @media screen and (max-width: 768px) {
      .grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
      }
  }
</style>
